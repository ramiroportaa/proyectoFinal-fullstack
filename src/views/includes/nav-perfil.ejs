<div class="rounded-top text-white mt-5" style="background-color: #000; height:fit-content;">
  <div class="container d-flex flex-row justify-content-center justify-content-md-start align-items-center py-3">
    <div class="ms-4 d-flex flex-column" style="width: 150px;">
      <img src="<%= avatar %>"
        alt="<%= firstName %>" class="img-fluid img-thumbnail mt-4 mb-2"
        style="width: 150px; z-index: 1">
      <!-- <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
        style="z-index: 1;">
        Edit profile
      </button> -->
    </div>
    <div class="ms-4">
      <h5><%= `${firstName} ${lastName}` %></h5>
      <p><%= email %> </p>
      <p>ROL: <%= role %> </p>
    </div>
    <div class="d-block m-auto me-0"></div>
    <a class="btn btn-success text-white me-3" href="/admin/chat" role="button">CHAT!</a>
    <% if (role == "invitado") { %>
      <a class="btn btn-primary text-white" href="/login.html" role="button">Login</a>
      <%} else { %>
        <a class="btn btn-primary text-white me-3" href="/orders.html" role="button">Mis Ordenes</a>
        <a class="btn btn-warning text-white" href="/logout.html" role="button">Desloguear</a>
      <% } %> 
    </div>
  </div>
</div>
